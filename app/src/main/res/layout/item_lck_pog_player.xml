<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_lck_pog_player_profile"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/ic_profile_player"
        android:layout_marginHorizontal="12.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/tv_lck_pog_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.LCK.Light"
        android:text="Deft"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_lck_pog_player_profile"
        app:layout_constraintStart_toStartOf="@id/iv_lck_pog_player_profile"
        app:layout_constraintEnd_toEndOf="@id/iv_lck_pog_player_profile"/>


</androidx.constraintlayout.widget.ConstraintLayout>