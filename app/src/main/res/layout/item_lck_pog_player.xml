<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_lck_pog_player_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        android:layout_marginHorizontal="12.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_lck_pog_player_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile_player" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_lck_pog_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.LCK.Light"
        android:text="Deft"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cv_lck_pog_player_profile"
        app:layout_constraintStart_toStartOf="@id/cv_lck_pog_player_profile"
        app:layout_constraintEnd_toEndOf="@id/cv_lck_pog_player_profile"/>


</androidx.constraintlayout.widget.ConstraintLayout>