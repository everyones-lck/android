                        android:id="@+id/iv_home_match_result_box2"
                        android:layout_width="141dp"
                        android:layout_height="70dp"
                        android:src="@drawable/shape_rect_8_white_line"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_home_result_logo2"
                        android:layout_width="48dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="11dp"
                        android:src="@drawable/ic_drx"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_home_result_team3"
                        style="@style/TextAppearance.LCK.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:text="KWANGDONG"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        app:layout_constraintEnd_toStartOf="@+id/tv_home_result_team4"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_home_result_team4"
                        style="@style/TextAppearance.LCK.Head1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text=" vs DRX"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_home_result_team3" />

                    <TextView
                        android:id="@+id/tv_home_result_date2"
