        <TextView
            android:id="@+id/tv_home_today_match_content"
            style="@style/TextAppearance.LCK.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="2024 LCK Summer 1st Match"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_home_today_match_box"
            app:layout_constraintStart_toStartOf="@+id/iv_home_today_match_box"
            app:layout_constraintTop_toTopOf="@+id/iv_home_today_match_box" />

        <TextView
            android:id="@+id/tv_home_today_match_date"
            style="@style/TextAppearance.LCK.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024.07.12 17:00"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_home_today_match_content"
            app:layout_constraintStart_toStartOf="@+id/tv_home_today_match_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_today_match_content" />

        <ImageView
            android:id="@+id/iv_home_today_match_logo1"
            android:layout_width="36.8dp"
            android:layout_height="32dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="55dp"
            android:src="@drawable/ic_gen_g"
            app:layout_constraintStart_toStartOf="@+id/iv_home_today_match_box"
            app:layout_constraintEnd_toStartOf="@id/iv_home_today_match_logo2"
            app:layout_constraintTop_toBottomOf="@id/tv_home_today_match_content" />

        <ImageView
            android:id="@+id/iv_home_today_match_logo2"
            android:layout_width="81dp"
            android:layout_height="32dp"
            android:layout_marginTop="17dp"
            android:layout_marginStart="55dp"
            android:src="@drawable/ic_t1"
            app:layout_constraintEnd_toEndOf="@id/iv_home_today_match_box"
            app:layout_constraintStart_toEndOf="@id/iv_home_today_match_logo1"
            app:layout_constraintTop_toBottomOf="@id/tv_home_today_match_content" />

        <TextView
            android:id="@+id/tv_home_today_match_team1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Body1"
            android:text="Gen.G"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="@+id/iv_home_today_match_logo1"
            app:layout_constraintTop_toTopOf="@id/iv_home_today_match_bar1"/>

        <TextView
            android:id="@+id/tv_home_today_match_team2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Body1"
            android:text="T1"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_home_today_match_logo2"
            app:layout_constraintTop_toBottomOf="@id/iv_home_today_match_logo2"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_home_no_match"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_today_title"
            android:visibility="gone">
            
            <ImageView
                android:id="@+id/iv_home_mo_match_big_star"
                android:layout_width="119dp"
                android:layout_height="109dp"
                android:src="@drawable/ic_no_match_big_star"
                android:layout_marginTop="19dp"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_home_no_match_small_star"
                android:layout_width="57dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_no_match_small_star"
                android:layout_marginBottom="34dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.LCK.Body1"
                android:text="No Matches"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/indicator_home_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="@color/gray_indicator"
            app:selectedDotColor="@color/white"
            app:dotsCornerRadius="8dp"
            app:dotsSize="5dp"
            app:dotsSpacing="2dp"
            android:layout_marginTop="13dp"
            app:layout_constraintEnd_toEndOf="@id/iv_home_today_match_box"
            app:layout_constraintStart_toStartOf="@id/iv_home_today_match_box"
            app:layout_constraintTop_toBottomOf="@id/iv_home_today_match_box" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_home_match_result"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="-250dp"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="@id/iv_home_today_match_box"
            app:layout_constraintEnd_toEndOf="@id/iv_home_today_match_box"
            app:layout_constraintTop_toBottomOf="@id/indicator_home_dot">

            <TextView
                android:id="@+id/tv_home_match_result"
                style="@style/TextAppearance.LCK.Head1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="17dp"
                android:text="LCK\nMatches\nResult"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/layout_home_match_result"
                app:layout_constraintTop_toTopOf="@id/layout_home_match_result" />

            <ImageView
                android:id="@+id/iv_home_match_result_arrow"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_arrow_right"
                app:layout_constraintStart_toStartOf="@id/tv_home_match_result"
                app:layout_constraintTop_toBottomOf="@id/tv_home_match_result" />

        </androidx.constraintlayout.widget.ConstraintLayout>

