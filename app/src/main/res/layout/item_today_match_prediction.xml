<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_today_match_prediction_team1_box"
        android:layout_width="115dp"
        android:layout_height="155dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/shape_rect_8_white_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_today_match_prediction_team1_logo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_gen_g"
        android:layout_marginTop="22dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toTopOf="@id/iv_today_match_prediction_team1_box"
        app:layout_constraintStart_toStartOf="@id/iv_today_match_prediction_team1_box"
        app:layout_constraintEnd_toEndOf="@id/iv_today_match_prediction_team1_box"
        app:layout_constraintBottom_toBottomOf="@id/iv_today_match_prediction_team1_box"/>

    <ImageView
        android:id="@+id/iv_today_match_prediction_team2_box"
        android:layout_width="115dp"
        android:layout_height="155dp"
        android:src="@drawable/shape_rect_8_white_line"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_today_match_prediction_team2_logo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_t1"
        android:layout_marginTop="22dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toTopOf="@id/iv_today_match_prediction_team2_box"
        app:layout_constraintStart_toStartOf="@id/iv_today_match_prediction_team2_box"
        app:layout_constraintEnd_toEndOf="@id/iv_today_match_prediction_team2_box"
        app:layout_constraintBottom_toBottomOf="@id/iv_today_match_prediction_team2_box"/>

    <RadioGroup
        android:id="@+id/rg_today_match_prediction_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/iv_today_match_prediction_team1_box"
        app:layout_constraintEnd_toEndOf="@id/iv_today_match_prediction_team2_box"
        app:layout_constraintTop_toTopOf="@id/iv_today_match_prediction_team1_box"
        app:layout_constraintBottom_toBottomOf="@id/iv_today_match_prediction_team2_box">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_today_match_prediction_container1"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

            <RadioButton
                android:id="@+id/btn_today_match_prediction_radio1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/sel_today_match_prediction_radio"
                android:button="@null"
                android:layout_marginBottom="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_today_match_prediction_container2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            >

            <RadioButton
                android:id="@+id/btn_today_match_prediction_radio2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/sel_today_match_prediction_radio"
                android:button="@null"
                android:layout_marginBottom="19dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>