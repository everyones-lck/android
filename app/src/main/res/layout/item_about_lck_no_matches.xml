<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_about_lck_match"
            android:layout_width="299dp"
            android:layout_height="73dp"
            android:background="@drawable/shape_rect_8_gray_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/layout_about_lck_match_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/view_about_lck_match"
            app:layout_constraintEnd_toEndOf="@id/view_about_lck_match"
            app:layout_constraintTop_toTopOf="@id/view_about_lck_match"
            app:layout_constraintBottom_toBottomOf="@id/view_about_lck_match">

            <ImageView
                android:id="@+id/iv_about_lck_team1"
                android:layout_width="36.8dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:id="@+id/layout_about_lck_match_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="22.3dp">

                <TextView
                    android:id="@+id/tv_match_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cafe_ohsquare_air"
                    android:textSize="8sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_match_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_about_lck_team2"
                android:layout_width="55dp"
                android:layout_height="22dp"
                android:layout_marginStart="22.3dp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>