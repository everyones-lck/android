<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.33">

        <ImageView
            android:id="@+id/iv_about_lck_player"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:elevation="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_about_lck_player"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1.31"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/iv_about_lck_player_team_color"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_about_lck_player_team_color_t1"
            app:layout_constraintBottom_toBottomOf="@id/iv_about_lck_player"
            app:layout_constraintDimensionRatio="1:0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_about_lck_player_team_logo"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="10dp"
            android:elevation="2dp"
            android:src="@drawable/img_about_lck_player_team_logo_t1"
            app:layout_constraintBottom_toBottomOf="@id/iv_about_lck_player_team_color"
            app:layout_constraintEnd_toEndOf="@id/iv_about_lck_player_team_color" />

        <TextView
            android:id="@+id/tv_about_lck_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAKER"
            android:textSize="9sp"
            android:textColor="@color/white"
            android:fontFamily="@font/cafe_ohsquare"
            android:layout_marginBottom="2dp"
            app:layout_constraintEnd_toEndOf="@id/iv_about_lck_player_team_logo"
            app:layout_constraintBottom_toBottomOf="@id/iv_about_lck_player_team_logo"
            android:elevation="3dp"/>

        <ImageView
            android:id="@+id/iv_about_lck_player_position"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toStartOf="@id/tv_about_lck_player_name"
            app:layout_constraintTop_toTopOf="@id/tv_about_lck_player_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_about_lck_player_name"
            android:elevation="3dp"/>

        <ImageView
            android:id="@+id/iv_about_lck_player_leader_position"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@id/iv_about_lck_player_position"
            app:layout_constraintTop_toTopOf="@id/iv_about_lck_player_position"
            app:layout_constraintBottom_toBottomOf="@id/iv_about_lck_player_position"
            android:elevation="3dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
