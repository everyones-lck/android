<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_about_lck_team_player_line1"
            android:layout_width="345dp"
            android:layout_height="2dp"
            android:background="#656565"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_about_lck_winning_career"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Winning Career"
            android:fontFamily="@font/cafe_ohsquare"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/view_about_lck_team_player_line1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_about_lck_team_player_down1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="@id/tv_about_lck_winning_career"
            app:layout_constraintBottom_toBottomOf="@id/tv_about_lck_winning_career"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_about_lck_player_detail"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:maxHeight="10dp"
            android:nestedScrollingEnabled="true"
            android:scrollbars="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_about_lck_winning_career"
            app:layout_constraintStart_toStartOf="@id/view_about_lck_team_player_line1"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>