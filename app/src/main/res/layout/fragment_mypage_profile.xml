<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.MainActivity"
        android:background="@drawable/bg_gradient_color">

        <!--선택 팀에 따라 뒤에 이미지 변경-->
        <ImageView
            android:id="@+id/iv_mypage_main_team_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/img_mypage_lck_background"/>

        <LinearLayout
            android:id="@+id/layout_mypage_main_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="76dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_mypage_main_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_mypage_back"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_signup_myteam_topbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY Profile"
                style="@style/TextAppearance.LCK.Bold.Title1_22sp"
                android:textColor="@color/LCK_purple"
                android:gravity="center"
                android:layout_marginStart="95dp"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_mypage_profile_rect"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="150dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/iv_mypage_main_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_signup_profile" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_mypage_profile_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            style="@style/TextAppearance.LCK.Bold.Title1_22sp"
            android:textColor="@color/LCK_purple"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/iv_mypage_profile_rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_mypage_profile_tier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tier"
            style="@style/TextAppearance.LCK.Bold.List_14sp"
            android:textColor="@color/gold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_mypage_profile_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <LinearLayout
            android:id="@+id/view_mypage_profile_tier_name"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_mypage_profile_tier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="75dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bronze"
                style="@style/TextAppearance.LCK.Light.Detail_10sp"
                android:textColor="@color/gray"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silver"
                style="@style/TextAppearance.LCK.Light.Detail_10sp"
                android:textColor="@color/gray"
                android:layout_marginStart="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gold"
                style="@style/TextAppearance.LCK.Light.Detail_10sp"
                android:textColor="@color/gray"
                android:layout_marginStart="35dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Master"
                style="@style/TextAppearance.LCK.Light.Detail_10sp"
                android:textColor="@color/gray"
                android:layout_marginStart="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenger"
                style="@style/TextAppearance.LCK.Light.Detail_10sp"
                android:textColor="@color/gray"
                android:layout_marginStart="25dp"/>

        </LinearLayout>

        <View
            android:id="@+id/view_mypage_profile_tier_rect"
            android:layout_width="310dp"
            android:layout_height="2dp"
            android:background="@drawable/shape_mypage_profile_tier_rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_mypage_profile_tier_name"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:id="@+id/view_mypage_profile_tier_circle"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/view_mypage_profile_tier_rect"
            app:layout_constraintBottom_toBottomOf="@id/view_mypage_profile_tier_rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="5dp"
                android:layout_height="6dp"
                android:background="@drawable/shape_circle_mypage_profile_tier_circle"
                android:layout_marginStart="20dp"/>

            <View
                android:layout_width="5dp"
                android:layout_height="6dp"
                android:background="@drawable/shape_circle_mypage_profile_tier_circle"
                android:layout_marginStart="62dp"/>

            <View
                android:layout_width="5dp"
                android:layout_height="6dp"
                android:background="@drawable/shape_circle_mypage_profile_tier_circle"
                android:layout_marginStart="55dp"/>

            <View
                android:layout_width="5dp"
                android:layout_height="6dp"
                android:background="@drawable/shape_circle_mypage_profile_tier_circle"
                android:layout_marginStart="55dp"/>

            <View
                android:layout_width="5dp"
                android:layout_height="6dp"
                android:background="@drawable/shape_circle_mypage_profile_tier_circle"
                android:layout_marginStart="65dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_mypage_profile_tier_rect"
            android:layout_marginTop="75dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 수정"
                style="@style/TextAppearance.LCK.Light.Title_18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_20"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                style="@style/TextAppearance.LCK.Light.Title_18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_20"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정탈퇴"
                style="@style/TextAppearance.LCK.Light.Title_18sp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
</layout>