<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.MainActivity"
        android:background="@drawable/bg_gradient_color">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_bnv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottom_bar"
            android:padding="8dp"
            app:itemActiveIndicatorStyle="@android:color/transparent"
            app:itemIconSize="32dp"
            android:elevation="4dp"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:itemTextAppearanceActive="@style/TextAppearance.LCK.Light.Detail_10sp"
            app:itemTextAppearanceInactive="@style/TextAppearance.LCK.Light.Detail_10sp"
            app:itemBackground="@color/bottom_bar"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/main_menu" />


        <!--선택 팀에 따라 뒤에 이미지 변경-->
        <ImageView
            android:id="@+id/iv_mypage_main_team_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/img_mypage_lck_background"/>

        <ImageView
            android:id="@+id/iv_mypage_profile_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_mypage_back"
            app:layout_constraintTop_toTopOf="@id/tv_mypage_profile_topbar_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_mypage_profile_topbar_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tv_mypage_profile_topbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY Profile"
            style="@style/TextAppearance.LCK.Bold.Title1_22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="39dp"
            android:textColor="@color/LCK_purple"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_mypage_profile_rect"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="150dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/iv_mypage_main_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_signup_profile" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_mypage_profile_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            style="@style/TextAppearance.LCK.Bold.Title1_22sp"
            android:textColor="@color/LCK_purple"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/iv_mypage_profile_rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_mypage_profile_tier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tier"
            style="@style/TextAppearance.LCK.Bold.List_14sp"
            android:textColor="@color/gold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_mypage_profile_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bronze"
            style="@style/TextAppearance.LCK.Light.Detail_10sp"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@id/view_mypage_profile_circle_1"
            app:layout_constraintStart_toStartOf="@id/view_mypage_profile_circle_1"
            app:layout_constraintEnd_toEndOf="@id/view_mypage_profile_circle_1"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silver"
            style="@style/TextAppearance.LCK.Light.Detail_10sp"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@id/view_mypage_profile_circle_2"
            app:layout_constraintStart_toStartOf="@id/view_mypage_profile_circle_2"
            app:layout_constraintEnd_toEndOf="@id/view_mypage_profile_circle_2"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gold"
            style="@style/TextAppearance.LCK.Light.Detail_10sp"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@id/view_mypage_profile_circle_3"
            app:layout_constraintStart_toStartOf="@id/view_mypage_profile_circle_3"
            app:layout_constraintEnd_toEndOf="@id/view_mypage_profile_circle_3"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Master"
            style="@style/TextAppearance.LCK.Light.Detail_10sp"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@id/view_mypage_profile_circle_4"
            app:layout_constraintStart_toStartOf="@id/view_mypage_profile_circle_4"
            app:layout_constraintEnd_toEndOf="@id/view_mypage_profile_circle_4"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenger"
            style="@style/TextAppearance.LCK.Light.Detail_10sp"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@id/view_mypage_profile_circle_5"
            app:layout_constraintStart_toStartOf="@id/view_mypage_profile_circle_5"
            app:layout_constraintEnd_toEndOf="@id/view_mypage_profile_circle_5"
            android:layout_marginBottom="5dp"/>

        <View
            android:id="@+id/view_mypage_profile_tier_line"
            android:layout_width="310dp"
            android:layout_height="2dp"
            android:background="@drawable/shape_mypage_profile_tier_rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_mypage_profile_tier"
            android:layout_marginTop="75dp"/>

        <View
            android:id="@+id/view_mypage_profile_circle_1"
            android:layout_width="5dp"
            android:layout_height="6dp"
            android:background="@drawable/shape_circle_mypage_profile_tier_circle"
            app:layout_constraintTop_toTopOf="@id/view_mypage_profile_tier_line"
            app:layout_constraintBottom_toBottomOf="@id/view_mypage_profile_tier_line"
            app:layout_constraintStart_toStartOf="@id/view_mypage_profile_tier_line"
            android:layout_marginStart="20dp"/>

        <View
            android:id="@+id/view_mypage_profile_circle_2"
            android:layout_width="5dp"
            android:layout_height="6dp"
            android:background="@drawable/shape_circle_mypage_profile_tier_circle"
            app:layout_constraintTop_toTopOf="@id/view_mypage_profile_tier_line"
            app:layout_constraintBottom_toBottomOf="@id/view_mypage_profile_tier_line"
            app:layout_constraintStart_toEndOf="@id/view_mypage_profile_circle_1"
            android:layout_marginStart="65dp"/>

        <View
            android:id="@+id/view_mypage_profile_circle_3"
            android:layout_width="5dp"
            android:layout_height="6dp"
            android:background="@drawable/shape_circle_mypage_profile_tier_circle"
            app:layout_constraintTop_toTopOf="@id/view_mypage_profile_tier_line"
            app:layout_constraintBottom_toBottomOf="@id/view_mypage_profile_tier_line"
            app:layout_constraintStart_toEndOf="@id/view_mypage_profile_circle_2"
            android:layout_marginStart="55dp"/>

        <View
            android:id="@+id/view_mypage_profile_circle_4"
            android:layout_width="5dp"
            android:layout_height="6dp"
            android:background="@drawable/shape_circle_mypage_profile_tier_circle"
            app:layout_constraintTop_toTopOf="@id/view_mypage_profile_tier_line"
            app:layout_constraintBottom_toBottomOf="@id/view_mypage_profile_tier_line"
            app:layout_constraintStart_toEndOf="@id/view_mypage_profile_circle_3"
            android:layout_marginStart="55dp"/>

        <View
            android:id="@+id/view_mypage_profile_circle_5"
            android:layout_width="5dp"
            android:layout_height="6dp"
            android:background="@drawable/shape_circle_mypage_profile_tier_circle"
            app:layout_constraintTop_toTopOf="@id/view_mypage_profile_tier_line"
            app:layout_constraintBottom_toBottomOf="@id/view_mypage_profile_tier_line"
            app:layout_constraintStart_toEndOf="@id/view_mypage_profile_circle_4"
            android:layout_marginStart="67dp"/>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_mypage_profile_tier_line"
            android:layout_marginTop="75dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mypage_profile_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 수정"
                style="@style/TextAppearance.LCK.Light.Title_18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_20"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tv_mypage_profile_logout_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                style="@style/TextAppearance.LCK.Light.Title_18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_20"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tv_mypage_profile_withdraw_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정탈퇴"
                style="@style/TextAppearance.LCK.Light.Title_18sp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>