<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_color">

        <LinearLayout
            android:id="@+id/layout_signup_myteam_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="4dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="76dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_signup_myteam_topbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                style="@style/TextAppearance.LCK.Head1"
                android:textColor="@color/white"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_signup_myteam_topbar_content"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="My Team 선택"
                style="@style/TextAppearance.LCK.Bnv"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_signup_myteam_next"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_arrow_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_signup_myteam_topbar"
            app:layout_constraintBottom_toBottomOf="@id/layout_signup_myteam_topbar"
            android:layout_marginEnd="20dp"
            android:onClick="onNextButtonClick"/>

        <TableLayout
            android:id="@+id/layout_signup_myteam_select"
            android:layout_width="240dp"
            android:layout_height="320dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="235dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TableRow>

                <ImageView
                    android:id="@+id/iv_signup_myteam_hanhwa"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="4dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_hanhwa"
                    android:background="@drawable/shape_team_background"/>

                <ImageView
                    android:id="@+id/iv_signup_myteam_gen_g"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="4dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_gen_g"
                    android:background="@drawable/shape_team_background"/>

                <ImageView
                    android:id="@+id/iv_signup_myteam_t1"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="4dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_t1"
                    android:background="@drawable/shape_team_background"/>

            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/iv_signup_myteam_kwangdong_freecs"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="4dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_kwangdong_freecs"
                    android:background="@drawable/shape_team_background"/>

                <ImageView
                    android:id="@+id/iv_signup_myteam_bnk"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="4dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_bnk"
                    android:background="@drawable/shape_team_background"/>

                <ImageView
                    android:id="@+id/iv_signup_myteam_nongshim_red_force"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="4dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_nongshim_red_force"
                    android:background="@drawable/shape_team_background"/>

            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/iv_signup_myteam_drx"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="4dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_drx"
                    android:background="@drawable/shape_team_background"/>

                <ImageView
                    android:id="@+id/iv_signup_myteam_ok_saving_bank_brion"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="4dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_ok_saving_bank_brion"
                    android:background="@drawable/shape_team_background"/>

                <ImageView
                    android:id="@+id/iv_signup_myteam_dplus_kia"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="4dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_dplus_kia"
                    android:background="@drawable/shape_team_background"/>

            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/iv_signup_myteam_kt_rolster"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="4dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_kt_rolster"
                    android:background="@drawable/shape_team_background"/>

            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
