<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000CC"
        android:padding="16dp">

        <!-- 중앙에 위치할 사각형 레이아웃 -->
        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_rect_12_white_fill">

            <TextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                style="@style/TextAppearance.LCK.Bold.List_14sp"
                android:textColor="@color/gray"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp"/>

            <TextView
                android:id="@+id/tv_dialog_message1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My team은"
                style="@style/TextAppearance.LCK.Light.Body_14sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_dialog_title"
                android:layout_marginTop="22dp"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/tv_dialog_message2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추후에 마이페이지에서 변경가능합니다."
                style="@style/TextAppearance.LCK.Light.Body_14sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_dialog_title"
                android:layout_marginTop="50dp"
                android:textColor="@color/gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <android.widget.Button
                    android:id="@+id/btn_change"
                    android:layout_width="175dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/shape_dialog_button_change_background"
                    android:text="변경"
                    style="@style/TextAppearance.LCK.Light.Body_14sp"
                    android:textColor="@color/gray"/>

                <android.widget.Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="175dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_dialog_button_confirm_background"
                    android:text="확인"
                    style="@style/TextAppearance.LCK.Light.Body_14sp"
                    android:textColor="@color/gray"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>
