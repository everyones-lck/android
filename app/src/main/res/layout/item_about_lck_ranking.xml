<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_about_lck_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_about_lck_ranking"
            app:layout_constraintBottom_toBottomOf="@id/iv_about_lck_ranking"
            app:layout_constraintStart_toStartOf="@id/line"
            android:layout_marginStart="24dp"
            android:textAppearance="@style/TextAppearance.LCK.Light.Level_12sp"
            android:textAlignment="center"
            android:text="DK" />

        <TextView
            android:id="@+id/tv_about_lck_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_about_lck_ranking"
            app:layout_constraintBottom_toBottomOf="@id/iv_about_lck_ranking"
            app:layout_constraintStart_toStartOf="@id/line"
            app:layout_constraintEnd_toEndOf="@id/line"
            android:textAppearance="@style/TextAppearance.LCK.Light.Level_12sp"
            android:text="DK" />

        <ImageView
            android:id="@+id/iv_about_lck_ranking"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/line"
            android:src="@drawable/ic_dplus_kia" />

        <View
            android:layout_marginHorizontal="55dp"
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#00FFFFFF"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@id/iv_about_lck_ranking"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
